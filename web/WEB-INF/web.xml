<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.1" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_1.xsd">
    <servlet>
        <servlet-name>WeatherServlet</servlet-name>
        <servlet-class>com.user.servlet.WeatherServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddArticle</servlet-name>
        <servlet-class>com.user.servlet.AddArticle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteArticle</servlet-name>
        <servlet-class>com.user.servlet.DeleteArticle</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WeatherServlet</servlet-name>
        <url-pattern>/WeatherServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddArticle</servlet-name>
        <url-pattern>/AddArticle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteArticle</servlet-name>
        <url-pattern>/DeleteArticle</url-pattern>
    </servlet-mapping>
</web-app>
